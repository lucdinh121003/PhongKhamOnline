@model PhongKhamOnline.Models.Appointment

@{
    ViewData["Title"] = "Xác nhận lịch hẹn";
}

<h1 class="text-center my-4">Xác nhận lịch hẹn</h1>

<div class="container">
    <form asp-action="DatLich" method="post" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="NgayKham" />
        <input type="hidden" asp-for="KhungThoiGianId" />
        <input type="hidden" asp-for="BacSiId" />

        <div class="mb-3">
            <label for="PatientName" class="form-label">Họ tên bệnh nhân:</label>
            <input asp-for="PatientName" class="form-control" placeholder="Nhập họ tên bệnh nhân" required />
        </div>

        <div class="mb-3">
            <label for="LyDo" class="form-label">Lý do khám:</label>
            <textarea asp-for="LyDo" class="form-control" placeholder="Nhập lý do khám" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Bác sĩ:</label>
            <input type="text" class="form-control" value="@Model.BacSi?.Ten " Không xác định"" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày khám:</label>
            <input type="text" class="form-control" value="@Model.NgayKham.ToString("dd/MM/yyyy")" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Khung giờ:</label>
            <input type="text" class="form-control" value="@Model.KhungThoiGian?.Time " Không xác định"" disabled />
        </div>

        <button type="submit" class="btn btn-primary mt-3 w-100">Xác nhận</button>
    </form>
</div>
