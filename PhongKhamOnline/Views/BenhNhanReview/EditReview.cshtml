@model DoctorReview
<div class="container mt-4">
<h2 class="text-center">Chỉnh sửa đánh giá</h2>

<form asp-action="EditReview" method="post" class="shadow p-4 rounded bg-light">
    <div class="form-group">
        <label for="ReviewText">Nội dung đánh giá</label>
        <textarea id="ReviewText" name="ReviewText" class="form-control" required>@Model.ReviewText</textarea>
    </div>

    <div class="mb-3">
        <label for="Rating" class="form-label">Số sao:</label>
        <select asp-for="Rating" class="form-select" required>
            <option value="5">⭐⭐⭐⭐⭐ (Xuất sắc)</option>
            <option value="4">⭐⭐⭐⭐ (Tốt)</option>
            <option value="3">⭐⭐⭐ (Khá)</option>
            <option value="2">⭐⭐ (Trung bình)</option>
            <option value="1">⭐ (Kém)</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
</div>


