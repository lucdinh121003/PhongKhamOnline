@model PhongKhamOnline.Models.BacSi
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
@{
    ViewData["Title"] = "Display";
}

<style>
    .section-title {
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
    }

    /* Định dạng cho các thẻ span và em */
    .section-title h1 {
    color: #3f51b5;
    }

    .container-time {
    display: flex;
    gap: 5px;
    flex-wrap: wrap;
    }

    .box-time {
    background: #000;
    color: #fff;
    padding: 20px;
    }
</style>
<section class="detailt-doctor">
    <div class="container">
        <div class="section-title">
            <h1>
                Thông tin chi tiết
            </h1>
        </div>
        <div class="row">
            <div class="col-4">
                <div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    <img class="w-100" src="@Html.DisplayFor(model => model.AnhDaiDien)">
                </div>
                <div style="margin-top:20px">
                    <h2><strong style="text-transform: uppercase;"> @Html.DisplayFor(model => model.Ten)</strong></h2>
                    <p>
                        Chức vụ: Chuyên gia
                        @{
                            var chuyenMonText = Model.ChuyenMonBacSiId switch
                            {
                                1 => "Tai - Mũi - Họng",
                                2 => "Nội - Soi",
                                3 => "Cơ - Xương - Khớp",
                                _ => ""
                            };
                        }
                        @chuyenMonText
                    </p>
                    <div>
                        <strong>Trung Bình Số Sao: </strong>
                        @if (ViewBag.AverageRating != null)
                        {
                            <span>@ViewBag.AverageRating ⭐</span>
                        }
                        else
                        {
                            <span>Chưa có đánh giá</span>
                        }
                    </div>
                    <div>
                        <strong>Tổng số đánh giá: </strong>@ViewBag.TotalReviews
                    </div>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("doctor"))
                    {
                        <a class="btn btn-booking" asp-area="Doctor" asp-controller="DoctorReview" asp-action="Index" asp-route-bacSiId="@Model.Id">
                            <span>Đánh giá</span>
                            <em class="mdi mdi-calendar"></em>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-booking" asp-area="" asp-controller="BNDoctorReview" asp-action="Create" asp-route-bacSiId="@Model.Id">
                            <span>Đánh giá</span>
                            <em class="mdi mdi-calendar"></em>
                        </a>
                    }
                }
                else
                {
                    <a class="btn btn-booking" asp-area="Identity" asp-controller="Account" asp-action="Login">
                        <span>Danh Gia</span>
                        <em class="mdi mdi-calendar"></em>
                    </a>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-booking" asp-area="" asp-controller="BNDoctorReview" asp-action="Index" asp-route-bacSiId="@Model.Id">
                        <span> Xem Đánh giá</span>
                        <em class="mdi mdi-calendar"></em>
                    </a>
                }
                else
                {
                    <a class="btn btn-booking" asp-area="Identity" asp-controller="Account" asp-action="Login">
                        <span>Đánh giá</span>
                        <em class="mdi mdi-calendar"></em>
                    </a>
                }
            </div>
            <div class="col-8">
                <div>
                    <h3><strong>GIỚI THIỆU</strong></h3>
                    <p>
                        @Html.Raw(Model.MoTa.Replace("\n", "<br />"))
                    </p>

                </div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <form>
                        <!-- Truyền giá trị ID của người dùng (ẩn) -->
                        <input type="hidden" id="idUser" value="@Model.UserId" />
                        <input type="hidden" id="idBacSi" value="@Model.Id" />


                        <!-- Chọn ngày làm việc -->
                        <div class="form-group">
                            <label for="ngayLamViecUser">Ngày làm việc</label>
                            <input type="date"
                            class="form-control"
                            id="ngayLamViecUser"
                            name="ngayLamViec"
                            min="@DateTime.Now.ToString("yyyy-MM-dd")"
                            required />
                        </div>
                    </form>

                    <!-- Danh sách khung giờ -->
                    <div id="khungGioContainer" class="form-group mt-3">
                        <h4>Khung giờ</h4>
                        <div id="khungGioList" class="container-time"></div>
                    </div>
                }

                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script>
                    $(document).ready(function () {
                        // Khi người dùng chọn ngày
                        $('#ngayLamViecUser').on('change', function () {
                            var ngayLamViec = $(this).val(); // Lấy ngày làm việc
                            var idUser = $('#idUser').val(); // Lấy ID người dùng

                            // Gửi yêu cầu AJAX lấy danh sách khung giờ
                            $.ajax({
                                url: '/Doctor/LichLamViecDoctor/GetKhungGioDaDat',
                                type: 'GET',
                                data: { idUser: idUser, ngayLamViec: ngayLamViec },
                                success: function (data) {
                                    var khungGioList = $('#khungGioList'); // Khu vực chứa khung giờ
                                    khungGioList.empty(); // Xóa các nội dung cũ

                                    if (data.length === 0) {
                                        // Nếu không có khung giờ, hiển thị thông báo
                                        khungGioList.append('<p class="text-muted">Không có khung giờ khả dụng cho ngày này.</p>');
                                        return;
                                    }

                                    // Hiển thị danh sách khung giờ với ID làm giá trị
                                    data.forEach(function (item) {
                                        var radioButton = `
                                            <div class="box-time">
                                                <input type="radio" id="khungGio_${item.id}" name="selectedTimeId" value="${item.id}">
                                                <label for="khungGio_${item.id}">${item.time}</label>
                                            </div>`;
                                        khungGioList.append(radioButton);
                                    });

                                    // Khi người dùng chọn khung giờ
                                    $('input[name="selectedTimeId"]').on('change', function () {
                                        var selectedTimeId = $(this).val(); // Lấy ID khung giờ đã chọn
                                        var selectedDate = $('#ngayLamViecUser').val(); // Lấy ngày làm việc
                                        var idBacSi = $('#idBacSi').val(); // Lấy ID của bác sĩ

                                        // Chuyển hướng tới trang đặt lịch với ID của khung giờ
                                        window.location.href = `/BNAppointment/DatLich?ngay=${selectedDate}&timeId=${selectedTimeId}&idBacSi=${idBacSi}`;
                                    });
                                },
                                error: function () {
                                    alert('Có lỗi xảy ra khi tải danh sách khung giờ.');
                                }
                            });
                        });
                    });
                </script>



