@{
    ViewData["Title"] = "Trang Chủ";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        
        /* Feature Section */
        :root {
            --card-padding: 30px;
            --card-title-size: 1.5rem;
            --card-subtitle-size: 1.1rem;
        }

        .feature-section {
            padding: 50px 0;
            background-color: #f7f7f7;
        }
        /* Cập nhật CSS */
        .row {
            display: flex;
            flex-wrap: nowrap; /* Đảm bảo các phần tử không xuống dòng */
            justify-content: space-between;
            gap: 20px; /* Khoảng cách giữa các cột */
        }

        .col-md-4, .col-lg-4 {
            flex: 1 1 30%; /* Chiếm ít nhất 30% chiều rộng của container */
            max-width: 30%; /* Đảm bảo rằng mỗi cột không vượt quá 30% */
            box-sizing: border-box;
        }

         .card-feature {
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            flex: 1 1 30%; /* Thể hiện rằng mỗi khung chiếm 30% chiều rộng và có thể điều chỉnh */
            display: flex;
            flex-direction: column;
            height: 100%; /* Đảm bảo tất cả các card có chiều cao bằng nhau */
        }

            .card-feature:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        .card-feature__title {
            font-size: var(--card-title-size);
            font-weight: 600;
            color: #016599;
            margin-bottom: 20px;
        }

        .card-feature__icon {
            font-size: 30px;
            color: #016599;
            margin-right: 10px;
        }

        .card-feature__subtitle {
            font-size: var(--card-subtitle-size);
            color: #555;
        }

        li {
            list-style-type: none;
        }

        /* Cập nhật các giá trị CSS khi có thay đổi */
        html {
            font-size: 100%; /* Đây là giá trị mặc định, có thể thay đổi khi cần */
        }

            html[style] {
                --card-padding: 20px;
                --card-title-size: 1.25rem;
                --card-subtitle-size: 1rem;
            }


        li {
            list-style-type: none;
        }

        /*start  Banner */
        .banner-area {
            min-height: 800px;
            background-image: url('images/Homebanner1.jpg');
            background-image: url('images/Homebanner1.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            position: relative;
        }

        {
            .banner-area

        {
            min-height: 600px;
        }

        }

        .banner-area h1 {
            font-size: 45px;
            color: #000;
            font-weight: 600;
            font-family: "Playfair Display", serif;
            margin-bottom: 30px;
        }

        {
            .banner-area h1

        {
            font-size: 26px;
        }

        }

        .banner-area p {
            margin-bottom: 50px;
        }

        {
            .banner-area p

        {
            padding-right: 113px;
        }

        }

        .banner-area .main_btn {
            margin-right: 10px;
        }

        {
            .banner-area .main_btn

        {
            margin-bottom: 10px;
        }

        }

        /*end  Banner */
        /*star Service  Banner */
        .card-service {
            padding: 40px 35px;
            border: 0;
            border-radius: 0;
            background: #fff;
            border: 1px solid #e8edf1;
            z-index: 22;
            position: relative;
            transition: all 300ms linear 0s;
        }

        .card-service__icon {
            margin-bottom: 12px;
            height: 72px;
            width: 72px;
            background: #ecf0f8;
            display: inline-block;
            text-align: center;
            line-height: 72px;
            border-radius: 51px;
            margin-bottom: 32px;
        }

            .card-service__icon i {
                color: #43464e;
            }

        .card-service__title {
            font-size: 20px;
            font-weight: 600;
            color: #33363e;
            border-top: 1px solid #e8edf1;
            padding-top: 26px;
            margin-bottom: 16px;
        }

        .card-service__subtitle {
            margin-bottom: 0;
            color: #797979;
            margin-bottom: 24px;
        }

        .card-service__link {
            font-size: 15px;
            font-family: "Playfair Display", serif;
            color: #33363e;
            letter-spacing: 1.5px;
            position: relative;
        }

            .card-service__link:after {
                content: '';
                position: absolute;
                left: 0;
                bottom: -14px;
                height: 2px;
                width: 40px;
                background: #33363e;
            }

            .card-service__link:hover:after {
                width: 100%;
                background: #0051d2;
                transition: all 300ms linear 0s;
            }

        .area-heading {
            margin-bottom: 60px;
        }

            .area-heading h3 {
                font-size: 36px;
                color: #33363e;
                position: relative;
            }

            .area-heading p {
                font-size: 14px;
                color: #797979;
                padding-left: 40px;
                margin-top: 5px;
            }

        {
            .area-heading p

        {
            padding-left: 0;
        }

        }

        /*end Service  Banner */
        /*start about-area */
        .about-area {
            background: #f7f7f7;
            background-size: cover;
            background-repeat: no-repeat;
            position: relative;
            padding-top: 400px;
            padding-bottom: 110px;
            margin-top: -180px;
        }

        {
            .about-area

        {
            padding-top: 250px;
        }

        }

        .about-area:after {
            content: '';
            position: absolute;
            left: 0;
            width: 50%;
            top: 0;
            background-image: url('images/about1.png');
            backgroundsize: auto;
            z-index: 11;
            height: 100%;
            background-repeat: no-repeat;
            background-position: right bottom;
        }

        {
            .about-area:after

        {
            display: none;
        }

        }

        {
            .about-area .about-content

        {
            padding-top: 30px;
        }

        }

        {
            .about-area .about-content

        {
            margin-top: 0;
            padding-left: 0;
        }

        .about-area .about-content h4 br {
            display: none;
        }

        .about-area .about-content p br {
            display: none;
        }

        }

        .about-area .about-content h4 {
            font-size: 36px;
            color: #33363e;
            font-family: "Playfair Display", serif;
            margin-bottom: 32px;
            line-height: 46px;
        }

        .about-area .about-content h6 {
            font-size: 16px;
            font-weight: 400;
            color: #0051d2;
            line-height: 25px;
            margin-bottom: 25px;
        }

        .about-area .about-content p {
            font-size: 15px;
            margin-bottom: 30px;
            line-height: 26px;
        }

        .btn-datlich, .btn-xemthem {
            color: #FFFF; /* Màu chữ */
            background-color: #016599;
            font-weight: bold; /* Chữ in đậm */
            border-radius: 20px; /* Bo góc */
            padding: 10px 20px; /* Khoảng cách bên trong */
            transition: all 0.3s ease; /* Hiệu ứng khi hover */
            margin: 20px;
            position: absolute;
            top: 55%;
        }

        .btn-datlich {
            left: 90px;
        }

        .btn-xemthem {
            left: 330px;
        }

        .service-area {
            padding-top: 60px;
            background-color: #f8f9fa;
        }

        .area-heading h3 {
            font-size: 2rem;
            font-weight: bold;
            color: #016599;
            margin-bottom: 10px;
        }

        .area-heading p {
            font-size: 1.1rem;
            color: #555;
            line-height: 1.6;
        }

        /* Sử dụng Flexbox để làm việc với các cột */
        .row {
            display: flex;
            flex-wrap: wrap; /* Để các phần tử có thể xuống dòng khi không đủ không gian */
            justify-content: space-between;
            gap: 20px; /* Khoảng cách giữa các cột */
        }

        .col-md-6,
        .col-lg-4 {
            flex: 1 1 30%; /* Các phần tử sẽ chiếm ít nhất 30% chiều rộng của container */
            max-width: 30%;
            box-sizing: border-box;
        }

        .card-service {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            text-align: center;
            height: 100%;
            margin-bottom: 30px;
        }

        .card-service__icon {
            font-size: 40px;
            color: #016599;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }

        .card-service__title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
        }

        .card-service__subtitle {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .card-service__link {
            font-size: 1.1rem;
            font-weight: 600;
            color: #016599;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .card-service__link:hover {
                color: #007bff;
            }

        .card-service:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

            .card-service:hover .card-service__icon {
                color: #007bff;
            }
    </style>
</head>
