@model IEnumerable<PhongKhamOnline.Models.Appointment>

<h2>Tạo lịch hẹn mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="PatientName">Tên bệnh nhân</label>
        <input type="text" class="form-control" id="PatientName" name="PatientName" required>
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Chọn ngày</label>
        <input type="date" class="form-control" id="AppointmentDate" name="AppointmentDate" required />
    </div>

    @{
        // Tạo danh sách tùy chọn giờ hẹn trực tiếp trong Razor View
        var appointmentTimeSlots = new List<SelectListItem>
    {
    new SelectListItem { Value = "7h-11h", Text = "7:00 AM - 11:00 AM" },
    new SelectListItem { Value = "14h-17h", Text = "2:00 PM - 5:00 PM" },
    new SelectListItem { Value = "19h-21h", Text = "7:00 PM - 9:00 PM" }
    // Các tùy chọn giờ khác có thể thêm vào đây
    };
    }

    <div class="form-group">
        <label for="AppointmentTimeSlot">Chọn khung giờ hẹn</label>
        <select class="form-control" id="AppointmentTimeSlot" name="AppointmentTimeSlot" required>
            <option value="">Chọn khung giờ</option>
            @foreach (var item in appointmentTimeSlots)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>



    <div class="form-group">
        <label for="BacSiId">Chọn bác sĩ</label>
        <select class="form-control" id="BacSiId" name="BacSiId" required>
            <option value="">Chọn bác sĩ</option>
            @foreach (var bacSi in ViewBag.BacSis)
            {
                <option value="@bacSi.Value">@bacSi.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Đặt lịch</button>
</form>
 