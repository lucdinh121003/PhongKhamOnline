@model DoctorReview

@{
    ViewData["Title"] = "Chỉnh sửa phản hồi";
}

<h2>Chỉnh sửa phản hồi</h2>

<form asp-action="EditReply" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Reply" class="control-label">Phản hồi</label>
        <textarea asp-for="Reply" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Reply" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>
