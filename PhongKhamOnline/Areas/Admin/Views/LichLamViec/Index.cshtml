@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Danh Sách Lịch Làm Việc";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRRS1f7b4+4M9/Ht/qz4FlFQ2fMvpfP/hTxM45fjM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ADBacSi.css">
</head>

<body>
    <div class="container mt-4">
        <h2>@ViewData["Title"]</h2>

        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="fas fa-plus-circle"></i> Thêm Lịch Làm Việc
        </a>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Bác Sĩ</th>
                    <th>Ngày Làm Việc</th>
                    <th>Thời Gian</th>
                    <th>Số Lượng Tối Đa</th>                
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BacSi</td>
                        <td>@item.NgayLamViec.ToString("dd/MM/yyyy")</td>
                        <td>@item.ThoiGian</td>
                        <td>@item.SoLuongToiDa</td>                      
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
