@model PhongKhamOnline.Models.UserWithRoleViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-4">
    <h2 class="mb-4">Chỉnh sửa quyền người dùng</h2>

    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly />
        </div>

        <div class="mb-3">
            <label for="FullName" class="form-label">FullName</label>
            <input type="fullName" class="form-control" id="FullName" name="FullName" value="@Model.FullName" readonly />
        </div>

        <div class="mb-3">
            <div class="col">
                <label asp-for="Role.Id" class="control-label">Vai trò</label>
                <select asp-for="Role.Id" asp-items="ViewBag.Role" class="form-control"></select>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
