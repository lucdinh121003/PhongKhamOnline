@model PhongKhamOnline.Models.BacSi

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Bác Sĩ</title>
    <link rel="stylesheet" href="~/css/createBS.css">
</head>
<!-- CSS Styles -->
<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    header {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .row {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
    }

    .col {
        flex: 1;
    }

    .form button {
        margin-top: 0px;
    }

    .box-button {
        display: flex;
        align-items: center;
        justify-content: end;
        gap: 10px;
    }

    .button-create {
        width: 100px;
    }

    .btl {
        display: flex;
        text-align: center;
        background: #000;
        border-radius: 6px;
        height: 40px;
        text-decoration: none;
        color: #fff !important;
    }

        .btl:hover {
            background-color: #fff;
            transition: background 0.4s;
            color: #000 !important;
        }


        .btl a {
            text-decoration: none !important;
            color: #fff;
            padding: 8px 12px;
        }

            .btl a:hover {
                transition: color 0.4s;
                color: #000 !important;
            }
</style>
<body>
    <div class="container">
        <header sty>Thêm Bác Sĩ</header>
        <div class="form">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Row 1 -->
                <div class="row">
                    <div class="col">
                        <label asp-for="Ten" class="control-label">Họ và Tên (*)</label>
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Email" class="control-label">Email (*)</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>

                <!-- Row 2 -->
                <div class="row">
                    <div class="col">
                        <label asp-for="ChuyenMonBacSiId" class="control-label">Chuyên Môn (*)</label>
                        <select asp-for="ChuyenMonBacSiId" asp-items="ViewBag.ChuyenMonBacSi" class="form-control"></select>
                    </div>
                    <div class="col">
                        <label asp-for="AnhDaiDien" class="control-label">Ảnh Đại Diện (*)</label>
                        <input type="file" asp-for="AnhDaiDien" class="form-control" />
                        <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
                    </div>
                </div>

                <!-- Row 3 -->
                <div class="row">
                    <div class="col">
                        <label asp-for="SoDienThoai" class="control-label">Phone (*)</label>
                        <input asp-for="SoDienThoai" class="form-control" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="SoDienThoaiPhongKham" class="control-label">Phone Phòng Khám (*)</label>
                        <input asp-for="SoDienThoaiPhongKham" class="form-control" />
                        <span asp-validation-for="SoDienThoaiPhongKham" class="text-danger"></span>
                    </div>
                </div>

                <!-- Row 4 -->
                <div class="row">
                    <div class="col">
                        <label asp-for="DiaChiThuongTru" class="control-label">Địa Chỉ Thường Trú (*) </label>
                        <input asp-for="DiaChiThuongTru" class="form-control" />
                        <span asp-validation-for="DiaChiThuongTru" class="text-danger"></span>
                    </div>

                    <div class="col">
                        <label asp-for="DiaChiPhongKham" class="control-label">Địa Chỉ Phòng Khám (*)</label>
                        <input asp-for="DiaChiPhongKham" class="form-control" />
                        <span asp-validation-for="DiaChiPhongKham" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="MoTa" class="control-label">Mô Tả </label>
                        <input asp-for="MoTa" class="form-control" />
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="SoTaiKhoan" class="control-label">Số Tài Khoản (*)</label>
                        <input asp-for="SoTaiKhoan" class="form-control" />
                        <span asp-validation-for="SoTaiKhoan" class="text-danger"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="box-button">

                    <div class="btl">
                        <a asp-action="Index" class="back-to-list">Back to List</a>
                    </div>
                    <div class="button-create">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>

                </div>

            </form>
        </div>


    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


</body>
</html>

